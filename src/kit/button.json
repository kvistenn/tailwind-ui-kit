{
    "name": "button",
    "label": "Button",
    "component": {
        "tag": "button",
        "classes": {
            "base": "leading-none rounded transition-colors",
            "sizes": {
                "sm": "px-3 py-1.5",
                "md": "px-4 py-2",
                "lg": "px-5 py-3"
            },
            "focus": "focus:outline-none",
            "variants": {
                "default": {
                    "base": "border-gray-200",
                    "hover": "hover:border-gray-500",
                    "thickness": {
                        "thin": "border-[0.5px]",
                        "normal": "border",
                        "thick": "border-[1.5px]"
                    },
                    "dark": {
                        "base": "dark:border-white/60 dark:text-white",
                        "hover": "dark:hover:border-white"
                    }
                },
                "primary": {
                    "base": "bg-blue-500 text-white",
                    "hover": "hover:bg-blue-600",
                    "dark": {
                        "base": "dark:bg-blue-600"
                    }
                },
                "secondary": {
                    "base": "bg-gray-800 text-white",
                    "hover": "hover:bg-gray-900",
                    "dark": {
                        "base": "dark:bg-gray-100 dark:text-black"
                    }
                },
                "filled": {
                    "base": "bg-gray-200 text-gray-800",
                    "hover": "hover:bg-gray-300",
                    "dark": {
                        "base": "dark:bg-gray-800 dark:text-white"
                    }
                }
            }
        },
        "children": [
            {
                "tag": "span",
                "classes": {
                    "base": "uppercase tracking-wide leading-none",
                    "sizes": {
                        "sm": "text-xs",
                        "md": "text-sm",
                        "lg": "text-base"
                    },
                    "thickness": {
                        "thin": "font-light",
                        "normal": "font-normal",
                        "thick": "font-bold"
                    }
                },
                "text": "Button"
            }
        ]
    }
}